<h1>新增看板</h1>



<form action="/boards" method="post">
    <input type="text" name= "authenticity_token" value="<%= authenticity_token%>">
  <label for="title">看板名稱</label>
  <input type="text" id='title' name="title">

  <label for="intro">說明</label>
  <textarea name="intro" id="intro" cols="30" rows="10"></textarea>

  <input type="submit" value="送出">

</form>









<%= form_for(@board) do |f|%>
  <div>
    <%= f.label :title, '看板名稱'%>
    <%= f.text_field :title%>
  </div>
  <div>
    <%= f.label :intro, '看板資訊'%>
    <%= f.text_area :intro %>
  </div>
  <div>
    <%= f.label :state, '看板狀態'%>
    <%= f.text_field :state%>
  </div>

  <%= f.submit '新增看板'%>
  <% end %>

  <%= link_to '返回看板', boards_path%>