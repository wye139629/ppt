<h1>看板</h1>
<div id="board">
  <Board></Board>
</div>


<%= link_to "新增看板", new_board_path%>
  <table>
    <thead>
      <td>
        看板名稱
      </td>
      <td>
        看板資訊
      </td>
      <td>
        狀態
      </td>
      <td>
        處理
      </td>
    </thead>
    <tbody>
      <% @boards.each do |board| %>
        <tr>
          <td><%= link_to board.title, board_path(board.id) %></td>
          <td><%= board.intro %></td>
          <td><%= board.state %></td>
          <td>
            <%= link_to "編輯", edit_board_path(board) %>
            <%= link_to "刪除", board_path(board), method: :delete, data: {confirm: "確定刪除?"}%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>